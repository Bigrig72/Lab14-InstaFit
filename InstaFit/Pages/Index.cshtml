@page
@using InstaFit.Models.Interfaces

@inject IFit FitManagementService

@{
    var fitnessPosts = await FitManagementService.GetFitnessPosts();
    Layout = "_Layout";

}
<div class="toplogo">
    <p>

        <span class="headlogo">InstaFit</span> News Feed
    </p>
</div>


@foreach (var item in fitnessPosts)
{
    <div class="instagram-wrap">
        <div class="card">
            <div class="card-header">
                <div class="profile-img"></div>
                <div class="profile-info">
                    <div class="name">Username</div>
                    <div class="location">@item.Location</div>
                </div>
                <div class="time">
                    1hr
                </div>
                <div class="content">
                    <img src="@item.URL" />
                </div>
                <div class="card-footer">
                    <div class="likes">
                        45 likes
                    </div>
                    <div class="description">
                        <p>
                            <span class="username">Username</span> @item.Description
                        </p>
                    </div>
                    <div class="comments">
                        <p>
                            <span class="username">Danny32: </span>What was your workout!!??
                        </p>
                        <p>
                            <span class="username">BigRig722: </span> I love the Form!!
                        </p>
                    </div>
                    <div class="form">
                        <a asp-page="/FitnessPosts/Index" asp-route-id="@item.ID">Edit Post</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    
  
}

<a asp-page="/FitnessPosts/Manage">CREATE NEW POST</a>