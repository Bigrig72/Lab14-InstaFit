@page "{id}"
@model InstaFit.Pages.FitnessPosts.IndexModel
@{
    Layout = "_Layout";

}
<div class="instagram-wrap">
    <div class="card">
        <div class="card-header">
            <div class="profile-img"></div>
            <div class="profile-info">
                <div class="name">Username</div>
                <div class="location">@Model.FitnessPost.Location</div>
            </div>
            <div class="time">
                1hr
            </div>
            <div class="content">
                <img src="@Model.FitnessPost.URL"/>
            </div>
            <div class="card-footer">
                <div class="likes">
                    45 likes
                </div>
                <div class="description">
                    <p>
                        <span class="username">Username</span> @Model.FitnessPost.Description
                    </p>
                </div>
                <div class="comments">
                    <p>
                        <span class="username">Danny32: </span>What was your workout!!??
                    </p>
                    <p>
                        <span class="username">BigRig722: </span> I love the Form!!
                    </p>
                </div>
                <div class="form">
                    <a asp-page="/FitnessPosts/Manage" asp-route-id="@Model.FitnessPost.ID">Edit Post</a>

                </div>
            </div>
        </div>
    </div>
</div>







